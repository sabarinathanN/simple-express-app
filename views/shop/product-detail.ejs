<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
       
            <div class="grid">
              
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= prods.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= prods.image %>" alt="A Book">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= prods.price %></h2>
                            <p class="product__description"><%= prods.description %></p>
                        </div>
                        <div class="card__actions">
                            <!-- <a href="/products/<%= prods.id %>" class="btn">Details</a> -->
                            <%- include('../includes/addCart.ejs') %>
                           
                        </div>
                    </article>
         
            </div>
       
    </body>
    <%- include('../includes/end.ejs') %>
